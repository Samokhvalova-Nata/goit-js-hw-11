{{#each this}}
<div class="photo-card">
    <a class="photo-link link" href="{{largeImageURL}}">
        <img src="{{webformatURL}}" alt="{{tags}}" loading="lazy" width="320" height="200"/>
        <div class="info">
            <p class="info-item">
                <b>Likes</b>
                {{likes}}
            </p>
            <p class="info-item">
                <b>Views</b>
                {{views}}
            </p>
            <p class="info-item">
                <b>Comments</b>
                {{comments}}
            </p>
            <p class="info-item">
                <b>Downloads</b>
                {{downloads}}
            </p>
        </div>
    </a>
</div>
{{/each}}